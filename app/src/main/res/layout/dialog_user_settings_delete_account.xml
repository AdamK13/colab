<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutUserSettingsDialogDelAccBase"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/background_dialog_important"
    android:foregroundGravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textViewUserSettingsDialogInfoDelAcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/josefinsans_medium"
        android:gravity="center"
        android:lineSpacingExtra="3sp"
        android:text="@string/delete_account_warning_info"
        android:textColor="@color/background_teal"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/editTextDeleteAccountEnterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/background_rounded_fill"
        android:backgroundTint="@color/teal_darker"
        android:ems="10"
        android:fontFamily="@font/josefinsans_medium"
        android:gravity="center"
        android:inputType="textPassword"
        android:minHeight="40dip"
        android:paddingHorizontal="15dp"
        android:paddingVertical="4dp"
        android:textColor="@color/text_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUserSettingsDialogPerformActionDelAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_rounded_fill"
            android:backgroundTint="@color/background_teal"
            android:fontFamily="@font/josefinsans_bold"
            android:text="@string/delete_account"
            android:textAllCaps="true"
            android:textColor="@color/teal_darkest"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressBarUserSettingsDialogDelAcc"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:indeterminate="true"
            android:indeterminateTint="@color/background_teal"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonUserSettingsDialogDelAccCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/background_rounded_fill"
            android:backgroundTint="@color/background_teal"
            android:fontFamily="@font/josefinsans_regular"
            android:text="@string/cancel_button"
            android:textColor="@color/teal_darkest"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>