<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".app.SetupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewGroupNameSetupFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/josefinsans_regular"
            android:gravity="center"
            android:text="Enter your group name"
            android:textColor="@color/teal_light"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextGroupNameSetupFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/multiline_input"
            android:backgroundTint="@color/teal_light"
            android:elegantTextHeight="true"
            android:ems="10"
            android:fontFamily="@font/josefinsans_semibold"
            android:gravity="center"
            android:hint="@string/group_name_hint"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="10sp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/teal_light"
            android:textColorHint="@color/teal_darkest"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewGroupPasswordSetupFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/josefinsans_regular"
            android:gravity="center"
            android:text="@string/create_group_password_prompt"
            android:textColor="@color/teal_darker"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewGroupPasswordInfoSetupFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/josefinsans_lightitalic"
            android:gravity="center"
            android:text="@string/create_group_password_info"
            android:textColor="@color/teal_darker"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextGroupPasswordSetupFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rounded_border_thin"
            android:backgroundTint="@color/teal_darker"
            android:ems="10"
            android:fontFamily="@font/josefinsans_semibold"
            android:gravity="center"
            android:hint="@string/group_password_hint"
            android:inputType="text"
            android:maxLines="1"
            android:minWidth="250dp"
            android:minHeight="50dp"
            android:textColor="@color/teal_darker"
            android:textColorHint="@color/teal_darkest"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSetupFragment"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_rounded_fill"
            android:backgroundTint="@color/gray_background"
            android:fontFamily="@font/josefinsans_semibold"
            android:gravity="center"
            android:minWidth="200dip"
            android:text="@string/join_group"
            android:textColor="@color/teal_dark" />

        <ProgressBar
            android:id="@+id/progressBarSetupFragment"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:indeterminateTint="@color/gray_background"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>