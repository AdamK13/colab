<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_marginHorizontal="7dp"
    android:background="@drawable/background_rounded_fill"
    android:backgroundTint="@color/teal_darker"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefinsans_regular"
        android:gravity="center"
        android:text="@string/project_choose_project_members"
        android:textColor="@color/teal_darkest"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayoutProjectCreationMembersHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonApplyMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_rounded_fill"
        android:backgroundTint="@color/text_dark"
        android:fontFamily="@font/josefinsans_bold"
        android:text="@string/apply"
        android:textAllCaps="true"
        android:textColor="@color/teal_light"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBarDialogProjectMembers"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/text_dark"
        android:visibility="gone" />
</LinearLayout>