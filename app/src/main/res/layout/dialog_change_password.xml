<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/background_rounded_border_fill"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/josefinsans_regular"
        android:gravity="center"
        android:text="@string/changing_password_info"
        android:textColor="@color/teal_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/josefinsans_regular"
        android:text="@string/changing_password_old_password"
        android:textColor="@color/teal_light"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextChangePasswordOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/background_rounded_fill"
        android:backgroundTint="@color/teal_darker"
        android:ems="10"
        android:fontFamily="@font/josefinsans_medium"
        android:gravity="center"
        android:inputType="textPassword"
        android:minHeight="40dip"
        android:paddingHorizontal="15dp"
        android:paddingVertical="4dp"
        android:textColor="@color/text_dark" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/josefinsans_regular"
        android:text="@string/changing_password_new_password"
        android:textColor="@color/teal_light"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextChangePasswordNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/background_rounded_fill"
        android:backgroundTint="@color/teal_light"
        android:ems="10"
        android:fontFamily="@font/josefinsans_medium"
        android:gravity="center"
        android:inputType="textPassword"
        android:minHeight="40dip"
        android:paddingHorizontal="15dp"
        android:paddingVertical="4dp"
        android:textColor="@color/text_dark" />

    <ProgressBar
        android:id="@+id/progressBarChangingAccountPassword"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:indeterminateTint="@color/teal_light"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonChangePasswordGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_rounded_fill"
        android:backgroundTint="@color/teal_light"
        android:fontFamily="@font/josefinsans_bold"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:text="@string/change"
        android:textColor="@color/text_dark"
        android:textSize="16sp" />
</LinearLayout>