<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutGroupLeaveRemoveTemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/background_rounded_fill"
    android:backgroundTint="@color/background_teal"
    android:paddingStart="15dp">

    <TextView
        android:id="@+id/textViewGroupLeaveRemoveTemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/josefinsans_medium"
        android:paddingVertical="7dp"
        android:paddingStart="10dp"
        android:textColor="@color/text_dark"
        android:textSize="19sp" />

    <ProgressBar
        android:id="@+id/progressBarGroupLeaveRemove"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/text_grey"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonGroupLeaveRemoveTemplate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:background="@drawable/background_rounded_fill"
        android:backgroundTint="@color/teal_darker"
        android:fontFamily="@font/josefinsans_bold"
        android:minWidth="88dip"
        android:minHeight="35dip"
        android:text="@string/leave"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:visibility="visible" />
</LinearLayout>